# Fraud Detection API Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_SECRET_KEY=your-secret-key-here-change-in-production

# Model Configuration
DEFAULT_MODEL_PATH=models/production_model.pkl
MODEL_THRESHOLD=0.5
FEATURE_TRANSFORMER_PATH=models/feature_transformer.pkl

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=fraud_detection
MLFLOW_ARTIFACT_LOCATION=./mlruns/artifacts

# Authentication
API_AUTH_ENABLED=false
API_KEY_1=demo-key-12345-change-in-production
API_KEY_2=demo-key-67890-change-in-production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database Configuration (Optional for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/frauddb
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log
LOG_PREDICTIONS=true

# Monitoring
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.05
ALERT_EMAIL=alerts@adeyinnovations.com

# Performance
MAX_WORKERS=4
TIMEOUT_SECONDS=30
MAX_CONTENT_LENGTH=16777216

# Feature Store (Future)
# FEATURE_STORE_URL=
# FEATURE_STORE_API_KEY=

# Cloud Storage (Future)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=fraud-detection-models
# AWS_REGION=us-east-1

# Azure Storage (Alternative)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_CONTAINER_NAME=fraud-models

# Sentry Error Tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn

# Slack Notifications (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
